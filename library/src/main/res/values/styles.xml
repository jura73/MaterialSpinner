<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dialog"></style>

    <style name="MaterialSpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/abc_spinner_textfield_background_material</item>
        <item name="android:textColor">#000</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:selectable">false</item>
        <item name="android:editable">false</item>
        <item name="android:theme">@style/MaterialSpinnerTheme</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="MaterialSpinnerTheme">
        <item name="colorControlNormal">@drawable/control_color</item>
        <item name="colorControlActivated">@drawable/control_color</item>
        <item name="colorControlHighlight">@drawable/control_color</item>
    </style>
</resources>