<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/holo_red_dark</item>
    </style>

    <style name="MaterialSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/edit_text_selector</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:selectable">false</item>
        <item name="android:editable">false</item>
        <item name="android:theme">@style/SpinnerLoading</item>
    </style>

    <style name="SpinnerLoading" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@drawable/control_color</item>
        <item name="colorControlActivated">@drawable/control_color</item>
        <item name="colorControlHighlight">@drawable/control_color</item>
    </style>
</resources>